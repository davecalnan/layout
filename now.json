{
  "version": 2,
  "name": "builder",
  "builds": [
    { "src": "www/next.config.js", "use": "@now/next" },
    { "src": "api/**/*.js", "use": "@now/node" },
    { "src": "components/package.json", "use": "@now/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/src/$1.js" },
    { "src": "/components/(.*)", "dest": "/components/dist/$1" },
    { "src": "/(.*)", "dest": "/www/$1" }
  ]
}